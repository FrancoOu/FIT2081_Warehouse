<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#03A9F4"
    app:cardBackgroundColor="#2196F3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:padding="16dp">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="98dp"
            android:layout_height="31dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="Item Name"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="97dp"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:text="Description"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/card_itemname"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:text="Frozen"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/card_quantity"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:text="Location"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/card_cost"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/card_itemname"
            android:layout_width="84dp"
            android:layout_height="33dp"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_description"
            android:layout_width="91dp"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_frozen"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/card_description" />

        <TextView
            android:id="@+id/card_location"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/card_frozen" />

        <TextView
            android:id="@+id/card_quantity"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/card_itemname" />

        <TextView
            android:id="@+id/card_cost"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/card_quantity" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:layout_marginStart="4dp"
            android:text="Quantity"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:layout_marginStart="4dp"
            android:text="Cost"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/item_counter"
            android:layout_width="78dp"
            android:layout_height="37dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_cost"
            app:layout_constraintVertical_bias="0.594" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:text="Delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>





